<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".View.Fragment.SashimiFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/recSashimi"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/popOrder"
        android:visibility="invisible"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/colorTint"
        app:cardCornerRadius="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/qtyNumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/backgroundPrimary"
                android:text="3 items"
                android:gravity="center"
                android:layout_weight="1.5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/backgroundPrimary"
                android:gravity="center"
                android:text="|"
                android:layout_weight="1.6"/>

            <TextView
                android:id="@+id/priceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/backgroundPrimary"
                android:text="45.000"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/backgroundPrimary"
                android:src="@drawable/ic_shopping_basket_black_24dp"
                android:layout_weight="1.3"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>